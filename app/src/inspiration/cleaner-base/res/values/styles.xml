<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/colorBaseTransparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="base_text_view">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="text_view_junk" parent="base_text_view">
        <item name="android:gravity">center</item>
        <item name="android:text">0 MB</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="layout_junk" parent="base_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="circle_junk" parent="base_text_view">
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">@drawable/bg_circle_border_green</item>
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="button_do_cleaner">
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
<!--        <item name="android:layout_marginStart">@dimen/dimen_big_ultra_32dp</item>-->
<!--        <item name="android:layout_marginEnd">@dimen/dimen_big_ultra_32dp</item>-->
        <item name="android:background">@drawable/bg_border_button_positive</item>
    </style>

    <style name="TextViewChargeBoosterPrimary" parent="base_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dimen_big_16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:textSize">@dimen/_22sdp</item>
    </style>

    <style name="TextViewChargeBoosterSecondary" parent="base_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="textview_charge_booster_tersiary" parent="base_text_view">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="layout_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/layout_footer</item>
        <item name="android:paddingTop">@dimen/dimen_big_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_big_16dp</item>
    </style>

    <style name="textview_condition_1" parent="base_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@id/tv_state_condition_2</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_title_medium_20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textview_condition_2" parent="base_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextBlack</item>
        <item name="android:layout_above">@id/layout_button</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">13sp</item>
    </style>


</resources>
