<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">
	<LinearLayout
		android:id="@+id/header"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="5dp"
		android:layout_marginRight="10dp"
		android:padding="8dp"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/imageview2"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/header"
			android:scaleType="center"
			android:layout_gravity="center_horizontal|center_vertical" />
		<TextView
			android:id="@+id/headL"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="𝐀𝐟𝐭𝐞𝐫 𝐏𝐚𝐲𝐦𝐞𝐧𝐭 , 𝐅𝐢𝐥𝐥 𝐭𝐡𝐢𝐬 𝐅𝐨𝐫𝐮𝐦 𝐭𝐨 𝐆𝐞𝐭 𝐏𝐞𝐫𝐦𝐚𝐧𝐞𝐧𝐭 𝐀𝐜𝐭𝐢𝐯𝐚𝐭𝐢𝐨𝐧 𝐊𝐄𝐘"
			android:textSize="12sp"
			android:textColor="#000000" />
	</LinearLayout>
	<TextView
		android:id="@+id/textview2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		android:layout_marginTop="20dp"
		android:padding="8dp"
		android:text="💸 𝗣𝗮𝘆𝗺𝗲𝗻𝘁 𝗠𝗲𝘁𝗵𝗼𝗱"
		android:textSize="14sp"
		android:textColor="#000000" />
	<LinearLayout
		android:id="@+id/linear2"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="25dp"
		android:orientation="horizontal">
		<RadioButton
			android:id="@+id/paypal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="7dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="Paypal"
			android:textSize="14sp"
			android:textColor="#D500F9" />
		<RadioButton
			android:id="@+id/crypto"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="7dp"
			android:gravity="center_horizontal|center_vertical"
			android:text="Crypto or Binance or BTC"
			android:textSize="14sp"
			android:textColor="#D500F9" />
	</LinearLayout>
	<LinearLayout
		android:id="@+id/linear3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="25dp"
		android:orientation="horizontal">
		<RadioButton
			android:id="@+id/upi"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="UPI"
			android:textSize="14sp"
			android:textColor="#D500F9" />
		<RadioButton
			android:id="@+id/gpay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Google Play Redeem Code"
			android:textSize="14sp"
			android:textColor="#D500F9" />
	</LinearLayout>
	<EditText
		android:id="@+id/tnxid"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="25dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="25dp"
		android:padding="8dp"
		android:textSize="12sp"
		android:textColor="#000000"
		android:hint="Paste Transaction Id or Hash Here"
		android:textColorHint="#2196F3"
		android:lines="1" />
	<TextView
		android:id="@+id/textview3"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="15dp"
		android:layout_marginTop="5dp"
		android:layout_marginRight="25dp"
		android:padding="8dp"
		android:text="🧑‍💻 𝗬𝗼𝘂𝗿 𝗖𝗼𝗻𝘁𝗮𝗰𝘁 𝗱𝗲𝘁𝗮𝗶𝗹 , 𝘄𝗵𝗲𝗿𝗲 𝗞𝗲𝘆 𝘄𝗶𝗹𝗹 𝗯𝗲 𝘀𝗲𝗻𝘁"
		android:textSize="14sp"
		android:textStyle="bold"
		android:textColor="#000000" />
	<EditText
		android:id="@+id/gmail"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="25dp"
		android:layout_marginTop="5dp"
		android:layout_marginRight="25dp"
		android:padding="8dp"
		android:textSize="12sp"
		android:textColor="#000000"
		android:hint="Enter Your Gmail or Telegram Username"
		android:textColorHint="#2196F3"
		android:lines="1" />
	<EditText
		android:id="@+id/comment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="25dp"
		android:layout_marginTop="5dp"
		android:layout_marginRight="25dp"
		android:padding="8dp"
		android:textSize="12sp"
		android:textColor="#000000"
		android:hint="Optionally you can write Comment here"
		android:textColorHint="#2196F3"
		android:lines="4" />
	<Button
		android:id="@+id/submit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="30dp"
		android:layout_marginTop="10dp"
		android:layout_marginRight="30dp"
		android:layout_marginBottom="5dp"
		android:background="#B9F6CA"
		android:gravity="center_horizontal|center_vertical"
		android:text="📤 𝗦𝘂𝗯𝗺𝗶𝘁"
		android:textSize="25sp"
		android:textStyle="bold"
		android:textColor="#000000"
		android:layout_gravity="center_horizontal|center_vertical" />
	<LinearLayout
		android:id="@+id/tg"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="30dp"
		android:orientation="horizontal">
		<ImageView
			android:id="@+id/imageview3"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:src="@drawable/telegram"
			android:scaleType="center"
			android:layout_gravity="center_horizontal|center_vertical" />
		<TextView
			android:id="@+id/textview4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Telegram Group"
			android:textSize="12sp"
			android:textColor="#000000" />
	</LinearLayout>
	<TextView
		android:id="@+id/submissions"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginTop="5dp"
		android:padding="8dp"
		android:text="🧿 Your Submissions"
		android:textSize="12sp"
		android:textColor="#000000" />
</LinearLayout>
